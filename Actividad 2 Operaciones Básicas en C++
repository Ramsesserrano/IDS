/******************************************************************************
Actividad 2 Operaciones BÃ¡sicas en C++
*******************************************************************************/
#include <iostream>

int main()
{
    float numero1, numero2;
    
    std::cout<<"Escribe el primer numero: ";// se piede el ingreso de el primer numero//
    std::cin>>numero1;//recibe el primer numero//
    
    std::cout<<"Escribe el segundo numero: ";// se piede el ingreso de el segundo numero//
    std::cin>>numero2;//recibe el segundo numero//
    
    float suma = numero1 + numero2;
    float resta = numero1 - numero2;
    float multiplicacion = numero1 * numero2;
    float divicion = numero1 / numero2;
    
    std::cout <<"La suma es: "<<suma<< std::endl;// Imprecion en Display//
    std::cout <<"La resta es: "<<resta<< std::endl;
    std::cout <<"La multiplicacion es: "<<multiplicacion<< std::endl;
    std::cout <<"La divicion es: "<<divicion<< std::endl;
    
    return 0;
}
